{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "swift",
			"args": [
				"build",
				"--build-tests",
				"--verbose"
			],
			"cwd": "defaultPackage",
			"problemMatcher": [
				"$swiftc"
			],
			"group": "build",
			"label": "swift: Build All (defaultPackage)",
			"detail": "swift build --build-tests --verbose"
		},
		{
			"type": "swift",
			"args": [
				"build",
				"--show-bin-path"
			],
			"cwd": "defaultPackage",
			"problemMatcher": [
				"$swiftc"
			],
			"group": "build",
			"label": "swift: Build All from tasks.json",
			"detail": "swift build --show-bin-path"
		},
		{
			"type": "swift-plugin",
			"command": "command_plugin",
			"args": ["--foo"],
			"cwd": "command-plugin",
			"problemMatcher": [
				"$swiftc"
			],
			"label": "swift: command-plugin from tasks.json",
			"detail": "swift package command_plugin --foo"
		}
	]
}